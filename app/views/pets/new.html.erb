
<div class="page_container">
<%= form_tag "/shelters/#{@shelter.id}/pets", method: :post do %>
  <%= label_tag :name %>
  <%= text_field_tag :name  %><br>
  <%= label_tag :image %>
  <%= text_field_tag :image %><br>
  <%= label_tag :description %>
  <%= text_field_tag :description %><br>
  Sex: <%= select_tag :sex, raw("<option>Male</option><option>Female</option>") %><br>
  <%= label_tag :approximate_age %>
  <%= text_field_tag :approximate_age %><br>
  <br>
  <%= submit_tag 'Create Pet' %>
<% end %>
</div>
