<h1>Edit Review</h1>

<%= form_tag("/shelters/#{@shelter.id}/reviews/#{@review.id}", method: :patch) do %><section class='form'>
  <%= label_tag "Title:" %>
  <%= text_field_tag :title, @review.title %><br>
  <%= label_tag "Rating:" %>
  <%= select_tag :rating, options_for_select([5,4,3,2,1], @review.rating) %><br>
  <%= label_tag "Content:" %>
  <%= text_field_tag :content, @review.content %><br>
  <%= label_tag "Image (optional): " %>
  <%= text_field_tag :picture, @review.picture  %><br></section>
  <button type="submit" class="btn btn-info">Submit</button>
<% end %>
